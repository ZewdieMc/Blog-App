<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'device-width in-field', placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: 'device-width in-field', placeholder: "Password" %>
  </div>

  <div class="actions">
  <%= f.submit "Log in", class: 'device-width common-btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
