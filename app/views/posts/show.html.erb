<article class='post-card-no-click'>
  <div class='post-card-title'>
  <h1><%=@post.title%> by <%=@post.author.name%></h1>
  <div class='post-card-count-top'>
  Comments: <%=@post.comments_counter == nil ? 0 : @post.comments_counter%>, 
  Likes: <%=@post.likes_counter == nil ? 0 : @post.likes_counter%></div>
  </div>
  <div><%=@post.text%></div>
</article>
<%= render 'partials/comment', comments: @post.comments%>
